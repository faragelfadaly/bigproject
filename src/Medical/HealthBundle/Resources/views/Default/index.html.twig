{% extends "::base.html.twig" %}

{% block body %}
<div data-role="content" data-inset="true">	
    <div data-role="collapsible-set">
        <!-- About our service -->
        <div data-role="collapsible" data-collapsed="false" data-content-theme="e"  class="ui-btn-active">
            <h3>About My Doctor</h3>
            <p>
                Welcome to the My Doctor application.<br>
                Your <strong>health</strong> is our target.<br>
                Our goal is to keep you in good physical status without any problem.<br>
                Be in continuous <strong>link</strong> to your doctor.<br>
            </p>
        </div>
        <!-- Notifications area -->
        <div data-role="collapsible">
            <h3>Last Doctor Notification</h3>
            <p>
                Notification 1
            </p>
            <p>
                Notification 2
            </p>

        </div>
        <!-- contacts of your doctor -->
        <div data-role="collapsible">
            <h3>Contacts of your doctor</h3>
            <p>
                01001234567
            </p>
            <p>
                01212345678
            </p>

        </div>
        <!-- Side Effects -->
        <div data-role="collapsible">
            <h3>Side Effects</h3>
            <form action="echo.cfm" method="post">

                <div data-role="fieldcontain">                                 
                    <legend>Write What you feel here</legend>
                    <textarea name="name" id="side_effects" rows="10">Enter your side effects to inform your doctor</textarea>
                </div>

                <div data-role="fieldcontain">
                    <label for="urgency">Urgency:</label>
                    <select name="urgency" id="urgent" data-role="slider" >
                        <option value="1">yes</option>
                        <option value="0"> no</option>
                    </select>
                </div>	

                <div data-role="fieldcontain">
                    <fieldset data-role="controlgroup" data-type="horizontal">
                        <legend>Your current health status:</legend>
                        <input type="radio" name="status" id="stable" value="Stable">                                    
                        <label for="stable">Stable</label>

                        <input type="radio" name="status" id="bad" value="Bad">                                    
                        <label for="bad">Bad</label>

                        <input type="radio" name="status" id="critical" value="Critical">
                        <label for="critical">Critical</label>
                    </fieldset>
                </div>

                <div data-role="fieldcontain">
                    <select>
                        <option selected>Select Doctor</option>					
                        <option>Doctor x</option>
                        <option>Doctor y</option>
                        <option>Doctor z</option>
                    </select>
                </div>		
                <div data-role="fieldcontain">
                    <select>
                        <option selected>Select Desease</option>					
                        <option>desease x</option>
                        <option>desease y</option>
                        <option>desease z</option>
                    </select>
                </div>		



                <div data-role="fieldcontain">
                    <input type="submit" name="submit" value="Send"  />
                </div>	

            </form>

        </div>
    </div>
    <br>
    <ul data-role="listview" data-inset="true" data-theme="e" data-filter="true" data-count-theme="b">
        <li><a href="#medicines">Medicines</a></li>                    
        <li><a href="#visits" data-transition="slide">Visits</a></li>                    
        <li><a href="#medical_tests" data-transition="flow">Medical tests</a></li>                    
        <li><a href="#daily_status">Daily Status</a></li>                    
    </ul>

</div><!-- /content -->

<!--------------------------------------------------------------------------------------------------------------->
<div data-role="page" id="medicines">
    <div data-role="header">
        <h1>Medicines</h1>
    </div><!-- /header -->
    <div data-role="content"data-inset="true">	
        <ul data-role="listview" data-inset="true" data-theme="e" data-filter="true" data-count-theme="b">
            <li><a href="#">Daily Doses</a></li>                    
            <li><a href="#">Renew medicines dates </a></li>                                        
        </ul>
        <a href="#home" data-role="button" data-rel="back">Cancel</a>

    </div><!-- /content -->
</div><!-- /page -->

<div data-role="page" id="visits">
    <div data-role="header">
        <h1>Visits</h1>
    </div><!-- /header -->
    <div data-role="content"data-inset="true">	
        <ul data-role="listview" data-inset="true" data-theme="e" data-filter="true" data-count-theme="b">
            <li><a href="#">Visit your doctor</a></li>                    
            <li><a href="#">Visits</a></li>                                        
        </ul>
        <a href="#home" data-role="button" data-rel="back">Cancel</a>
    </div><!-- /content -->
</div><!-- /page -->

<div data-role="page" id="medical_tests">
    <div data-role="header">
        <h1>Medical tests</h1>
    </div><!-- /header -->
    <div data-role="content"data-inset="true">	
        <ul data-role="listview" data-inset="true" data-theme="e" data-filter="true" data-count-theme="b">
            <li><a href="#">Medicines</a></li>                    
            <li><a href="#">Visits</a></li>                                        
        </ul>
        <a href="#home" data-role="button" data-rel="back">Cancel</a>
    </div><!-- /content -->
</div><!-- /page -->

<div data-role="page" id="daily_status">
    <div data-role="header">
        <h1>Daily Status</h1>
    </div><!-- /header -->
    <div data-role="content"data-inset="true">	
        <ul data-role="listview" data-inset="true" data-theme="e" data-filter="true" data-count-theme="b">
            <li><a href="#">Hypertension records</a></li>                    
            <li><a href="#">Diabetes records</a></li>                                        
        </ul>
        <a href="#home" data-role="button" data-rel="back">Cancel</a>
    </div><!-- /content -->
</div><!-- /page -->
{% endblock %}